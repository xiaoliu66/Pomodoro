{
  "name": "pomodoro",
  "version": "1.1.0",
  "description": "极简约风格的番茄钟",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder --linux"
  },
  "author": "github@xiaoliu66",
  "license": "ISC",
  "devDependencies": {
    "electron": "^12.0.1",
    "electron-builder": "^20.28.4"
  },
  "build": {
    "appId": "com.liu.test",
    "asar": true,
    "copyright": "版权归轮回所有",
    "directories": {
      "buildResources": "images",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "element-ui": "^2.15.1",
    "sql.js": "^1.5.0",
    "vue": "^2.6.12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiaoliu66/Pomodoro.git"
  },
  "bugs": {
    "url": "https://github.com/xiaoliu66/Pomodoro/issues"
  },
  "homepage": "https://github.com/xiaoliu66/Pomodoro#readme"
}
